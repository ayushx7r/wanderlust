<% layout("/layouts/boilerplate") %>
<div id="filters" >
    <div class="options">
        <a href="/listings">
            <div class="filter <%=filter ? '' : 'active' %>">
                <div><i class="fa-solid fa-house"></i></div>
                <p>Home</p>
            </div>
        </a>
        
        <a href="/listings?filter=rooms">
            <div class="filter <%= filter == 'rooms'? 'active' : '' %>">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
        </a>
        <a href="/listings?filter=iconiccities">
            <div class="filter <%= filter == 'iconiccities'? 'active' : '' %>">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
        </a>
        <a href="/listings?filter=amazingviews">
            <div class="filter <%= filter == 'amazingviews'? 'active' : '' %>">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Amazing views</p>
            </div>
        </a>
        <a href="/listings?filter=camping">
            <div class="filter <%= filter == 'camping'? 'active' : '' %>">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
        </a>
        <a href="/listings?filter=beaches">
            <div class="filter <%= filter == 'beaches'? 'active' : '' %>">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
        </a>
        <a href="/listings?filter=castles">
            <div class="filter <%= filter == 'castles'? 'active' : '' %>">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
        </a>
        <a href="/listings?filter=tropical">
            <div class="filter <%= filter == 'tropical'? 'active' : '' %>">
                <div><i class="fa-solid fa-tree"></i></div>
                <p>Tropical</p>
            </div>
        </a>
        <a href="/listings?filter=apartments">
            <div class="filter <%= filter == 'apartments'? 'active' : '' %>">
                <div><i class="fa-solid fa-building"></i></div>
                <p>Apartments</p>
            </div>
        </a> 
        <a href="/listings?filter=cabins">
            <div class="filter <%= filter == 'cabins'? 'active' : '' %>">
                <div><i class="fa-solid fa-house-chimney-window"></i></div>
                <p>Cabins</p>
            </div>
        </a>
        
    </div>
    

    <div class="tax-toggle col-4">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total before taxes</label>
        </div>
    </div>

</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let list of listings) {%>
    <a href="/listings/<%=list._id%>" class="list-link">
        <div class="card col listing-card">
            <img src="<%= list.image.url %>" class="card-img-top" style="height:20rem;" alt="<%=list.title%>">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text">
                <b><%=list.title%></b>
                <br>
                <b class="priceInfo afterTax">&#8377; <%= list.price.toLocaleString("en-IN") %></b> <b class="priceInfo hide beforeTax">&#8377; <%= list.price.toLocaleString("en-IN") %></b> <span class="taxInfo">night</span>
                
                </p>
            </div>
        </div>
    </a>
    <% } %>
</div>

<script src="/js/tax.js">
    
</script>